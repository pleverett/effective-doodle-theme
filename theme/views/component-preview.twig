{# if requesting a partial for ajax swaps it will not extend the base.twig #}
{% if params.partial is not defined %}
	{% extends 'preview.twig' %}
{% endif %}

{% set component = params.component %}
{% set path = params.path|default('components') %}

{# Optional if path and component differ #}

{% block content %}

	<iframe height="500px" width="800px" src="/?component={{component}}">

	{% set state = params %}

	{% if params.debug %}
		{{ include('@helper/debug.html') }}
	{% endif %}

	<style>
		#wpadminbar {
			display: none;
		}

		html {
			margin-top: 0 !important;
		}
	</style>

{% endblock %}
